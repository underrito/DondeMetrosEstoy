<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:id="@+id/scrollView1" 
	android:layout_width="match_parent">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000">
    <ImageView 
    	android:id="@+id/imageView1" 
    	android:layout_width="wrap_content" 
    	android:src="@drawable/lineatit" 
    	android:layout_height="wrap_content"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:contentDescription="@string/content"
        android:paddingLeft="2dp">
    	</ImageView> 
  
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp">
         <ImageView 
    		android:layout_width="wrap_content" 
    		android:src="@drawable/origen" 
    		android:layout_height="wrap_content"
    		android:paddingTop="2dp"
    		android:paddingBottom="2dp"
    		android:paddingRight="5dp"
    		android:contentDescription="@string/content"/> 
    	
   		<AutoCompleteTextView
   		    android:layout_width="match_parent" 
    		android:layout_height="wrap_content" 
    		android:id="@+id/txtOrigen"
    		android:textSize="25dp"
    		android:textColor="#FFFFFF"
    		android:textStyle="bold"
    		android:background="#E09614"
                />
       </LinearLayout>
        <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="5dp">
         <ImageView 
    		android:layout_width="wrap_content" 
    		android:src="@drawable/destino" 
    		android:layout_height="wrap_content"
    		android:paddingTop="2dp"
    		android:paddingBottom="2dp"
    		android:paddingRight="5dp"
    		android:contentDescription="@string/content"/> 
    	
   		<AutoCompleteTextView
   		    android:layout_width="match_parent" 
    		android:layout_height="wrap_content" 
    		android:id="@+id/txtDestino"
    		android:textSize="25dp"
    		android:textColor="#FFFFFF"
    		android:textStyle="bold"
    		android:background="#E09614"
                />
       </LinearLayout>
  	<LinearLayout 
   		android:layout_width="match_parent" 
   		android:layout_height="wrap_content"
   		android:gravity="center_horizontal|center_vertical"
   		android:orientation="horizontal"
   		android:paddingTop="15dp">
   		<ImageView 
   			android:id="@+id/btnOkBuscarDetalle" 
   			android:layout_width="wrap_content"
   			android:src="@drawable/consultar" 
   			android:layout_height="wrap_content"
   			android:paddingRight="10dp"
   			android:layout_weight="0.50"
   			android:adjustViewBounds="true"
   			android:layout_gravity="center_vertical|center_horizontal"
   			android:background="#000000"
   			android:contentDescription="@string/content">
   			</ImageView>
   			<ImageView 
   			android:id="@+id/btnOkBuscarMapa" 
   			android:layout_width="wrap_content"
   			android:src="@drawable/consultarmapa" 
   			android:layout_height="wrap_content"
   			android:paddingRight="10dp"
   			android:layout_weight="0.50"
   			android:adjustViewBounds="true"
   			android:layout_gravity="center_vertical|center_horizontal"
   			android:background="#000000"
   			android:contentDescription="@string/content">
   			</ImageView>
   		
   	</LinearLayout> 
   	<LinearLayout 
		android:layout_width="wrap_content" 
		android:id="@+id/llBannerAD" 
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:paddingTop="10dp">
		</LinearLayout>
   	
</LinearLayout> 
</ScrollView>

