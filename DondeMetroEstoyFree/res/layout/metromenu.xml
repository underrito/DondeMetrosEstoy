<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:id="@+id/scrollView1" 
	android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
       <LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		<ImageView 
			android:id="@+id/imageViewLogo" 
			android:layout_width="wrap_content" 
			android:src="@drawable/metrosw" 
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:contentDescription="@string/content">
			</ImageView>		
	</LinearLayout>
    <LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		<ImageView 
			android:id="@+id/imageView2" 
			android:layout_width="wrap_content" 
			android:src="@drawable/menu" 
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:contentDescription="@string/content">
			</ImageView>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		<ImageView 
			android:id="@+id/calculaRutaImg" 
			android:layout_width="match_parent" 
			android:src="@drawable/metrobuscaestacion" 
			android:layout_height="wrap_content"
			android:layout_weight="0.50"
			android:adjustViewBounds="true"
			android:layout_gravity="center_vertical|center_horizontal"
			android:background="#000000"
			android:contentDescription="@string/content">
			</ImageView>
		<ImageView 
			android:id="@+id/detLineaImg"
			android:src="@drawable/metrobuscalinea" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"						
			android:layout_weight="0.50"
			android:adjustViewBounds="true"
			android:layout_gravity="center_vertical|center_horizontal"
			android:background="#000000"
			android:contentDescription="@string/content">
			</ImageView>
		</LinearLayout>
		
		
		
		<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		<ImageView 
			android:id="@+id/calculaRutaImg2"			 
			android:src="@drawable/metrobuscamapa" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"						
			android:layout_weight="0.50"
			android:layout_gravity="left"
			android:adjustViewBounds="true"
			android:background="#000000"
			android:contentDescription="@string/content">

			</ImageView>			
		<ImageView 
			android:id="@+id/btnMenuBuscar"			 
			android:src="@drawable/metrobuscanombre" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"						
			android:layout_weight="0.50"
			android:layout_gravity="left"
			android:adjustViewBounds="true"
			android:background="#000000"
			android:contentDescription="@string/content">

			</ImageView>
		</LinearLayout>
		
		<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		<ImageView 
			android:id="@+id/acercaImg2"
			android:src="@drawable/metroabout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"						
			android:layout_weight="0.50"
			android:layout_gravity="left"
			android:adjustViewBounds="true"
			android:background="#000000"
			android:contentDescription="@string/content">			
			</ImageView>
					
		</LinearLayout> 
	<LinearLayout 
		android:layout_width="wrap_content" 
		android:id="@+id/llBannerAD" 
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:paddingTop="10dp">
		</LinearLayout>
</LinearLayout>
</ScrollView>