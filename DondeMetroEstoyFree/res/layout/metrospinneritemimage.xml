    <TextView  
    	android:id="@+id/textViewSpinnerItem" 
    	android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
    	android:paddingLeft="5dp"
    	style="@style/SpinnerTextViewItem"/>
    </LinearLayout>

